<title>La Salle Eats | User Profile </title>
<style>

	
/*search bar*/

.icon {
            width: 32px;
            height: 32px;
            border: 1px solid #2F3B1C;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            margin-left: 10px;
        }

        .loginregister {
            color: #444444;
            font-weight: bold;
        }

        a:link, a:visited {
            color: #444444;
            text-decoration: none;
        }

        a:hover {
            color: #526534;
            text-decoration: none;
        }

        .loginregister:hover {
            color: #526534;
        }

        .navlinks {
            word-spacing: 10px;
            margin-right: 20px;
            font-size:larger;
            text-underline-offset: auto;
        }

        .button {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        /* searchbar */

        #searchbar {
            margin-left: 25px;
            width: 100%;
            max-width: 300px;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 60px;
            padding: 10px 20px;
            backdrop-filter: blur(4px) saturate(180%);
        }

        #searchbar input {
            background: transparent;
            flex: 1;
            border: 0;
            outline: none;
            font-size: 20px;
            color: #444444;
        }

        #searchbar button img{
            width: 30px;
            height: 30px;
        }

        #searchbar button {
            border: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0);
            cursor: pointer;
            width: 50px;
            height: 50px;
            backdrop-filter: blur(4px) saturate(180%);
        }

        ::placeholder {
            color: #444444;
        }
</style>
</head>
<body>
  <div class="main-content">
    <!-- Top navbar -->
	<header class="navigation" style="position: sticky; top: 0; z-index: 999;">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
            <div class="container">
                <a href="Homepage">
                    <img src = "images/logo.png" width = 100px height = 85px/>
                </a>
				<form action="/search" id="searchbar" style="margin-top: 15px; margin-left: 40px; border: #2F3B1C solid 2px;">
					<input type="text" name="user" placeholder="Search...">
					<button type="submit"><img src="./images/searchicon.png"></button>
				</form>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
    
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="Homepage">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="restolist">Restaurants</a>
                        </li>
						<li class="nav-item">
							<a class="nav-link" href="Homepage">Sign Out</a>
						</li>
                    </ul>
            {{#if profile.image}}
						<a href="User">
  						<img src="/{{profile.image}}" class="icon" style="a:hover { border-radius: #2F3B1C solid 4px;}">
  						</a>
            {{else}}
            <img src="./images/defaulticon.png " class="icon" style="a:hover { border-radius: #2F3B1C solid 4px;}">
            </a>
            {{/if}}
                </div>
            </div>
        </nav>
	</header>
    <!-- Header -->
    <div class="header pb-8 pt-lg-8 " style="min-height: 300px; background-image: url(dlsuheader.jpg); background-size: cover; background-position: center top;">
      <!-- Mask -->
      <span class="mask bg-gradient-default opacity-8"></span>
      <!-- Header container -->
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-7 col-md-10">
         
            <!-- Button trigger modal -->
			<button type="button" class="btn edit" style = " white-space:nowrap" data-toggle="modal" data-target="#exampleModal">
			  Edit profile
			</button>

			<!-- Modal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModalLabel">Edit User Profile</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
			      <form action="/User/edit/user-profile" method="post" enctype="multipart/form-data">
			      <div class="modal-body">
			        <input type="text" class="form-control" value="{{user}}"  name="username" style="background: #fff;" placeholder="username here..."><br>
			        <input type="text" class="form-control" value="{{profile.education}}"  name="education" style="background: #fff;" placeholder="education here..."><br>
			        <input type="text" class="form-control" value="{{profile.college}}"  name="college" style="background: #fff;" placeholder="college here..."><br>
			        <input type="text" class="form-control" value="{{profile.profession}}"  name="profession" style="background: #fff;" placeholder="profession here..."><br>

			        <input type="file" class="form-control"  name="image" style="background: #fff;" placeholder="Reply here...">
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			        <button type="submit" class="btn btn-primary">Save changes</button>
			      </div>
			  </form>
			    </div>
			  </div>
			</div>

          </div>
        </div>
      </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
          <div class="card card-profile shadow">
            <div class="row justify-content-center">
              <div class="col-lg-3 order-lg-2">
                <div class="card-profile-image">
            {{#if profile.image}}

                  <a href="#">
                    <img src="/{{profile.image}}" style="height: 180px;width: 200px" class="rounded-circle">
                  </a>
            {{else}}
            <a href="#">
                    <img src="./images/defaulticon.png" class="rounded-circle">
                  </a>

            {{/if}}


                </div>
              </div>
            </div>
            <div class="card-body pt-0 pt-md-4">
              <div class="row">
                <div class="col" style ="margin-top:30px">
                  <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                    <div>
                      <span class="heading">{{chickenLikes}}</span>
                      <span class="description">Likes</span>
                    </div>
                    <div>
                      <span class="heading">{{commentlength}}</span>
                      <span class="description">Comments</span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <h3>
                  {{user}}
                </h3>
                <div class="h5 mt-4">
                  <i class="ni business_briefcase-24 mr-2"></i>{{profile.education}}
                </div>
                <div>
                  <i class="ni education_hat mr-2"></i>{{profile.college}}
                </div>
                <hr class="my-4">
                <p>{{profile.profession}}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-8 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center tab">
                <div class="col-8">
                  <button class="mb-0 tablinks" onclick="openTab(event, 'showpost')">Posts</button>
                </div>
                <div class="col-4 text-right">
                  <button class="mb-0 tablinks" onclick="openTab(event, 'showcomment')" style = "float:right">Comments</button>
                </div>
              </div>
            </div>

 			<div class="card-body tabcontent" id = "showpost" style = "display:block">
 				{{#each chicken}}
    				<div class = "header_post" style ="display:flex; flex-direction:row">
               {{#if profile.image}}
                <a href="User">
                  <img src="/{{profile.image}}" class="rounded-circle shadow-1-strong me-3" width = 50 height = 50>
                  </a>
                {{else}}
                <img src="./images/defaulticon.png " class="rounded-circle shadow-1-strong me-3"  width = 50 height = 50>
                </a>
                {{/if}}
    				
    					<div style = "margin-left: 10px ;">
    						<a href = "User"><h6 style = "color: seagreen; font-size:16px;">{{profile.username}}</h6></a>
                       {{#if rating}}
                          <p class="text-muted small mb-0"> {{rating}}/5
                        {{else}}
                          <p class="text-muted small mb-0"> 0/5</p>
                        {{/if}}
    		               
                       {{#each star1}}
                          <span class="fa fa-star" style = "color: orange;"></span>
                       {{/each}}
                       {{#each emptyStar1}}
                          <span class="fa fa-star-o" style = "color: orange;"></span>
                       {{/each}}
                                

    								
    						<h4 style = "margin-top:10px">{{title}}</h4>
    						<p class="mt-3 mb-4 pb-2">
    							{{content}}
    						</p>

    						 <div class="small d-flex justify-content-start">
                <form action="/User/like/{{id}}" method="post">
                    <button type="submit" class = "btn" ><i class="fa fa-thumbs-up"></i> {{likes.length}} </button>
                </form>
                <form action="/User/dislikes/{{id}}" method="post">
                   <button type="submit" class = "btn" ><i class="fa fa-thumbs-up fa-rotate-180"></i> {{dislikes.length}} </button>
                                
                </form>
              </div>
    					</div>
    				</div><br><hr>

				{{/each}}
        <!-- ------------------------------------------------------------------------ -->
				  <span id = "showmore" style = "display:flex; justify-content:center; cursor:pointer;"
           onclick = "More()">Show more</span>
				  <span id = "more">
          <br>
           {{#each chicken2}}
        <div class = "header_post" style ="display:flex; flex-direction:row">
           {{#if profile.image}}
            <a href="User">
              <img src="/{{profile.image}}" class="rounded-circle shadow-1-strong me-3" width = 50 height = 50>
              </a>
            {{else}}
            <img src="./images/defaulticon.png " class="rounded-circle shadow-1-strong me-3"  width = 50 height = 50>
            </a>
            {{/if}}
        
          <div style = "margin-left: 10px ;">
            <a href = "User"><h6 style = "color: seagreen; font-size:16px;">{{profile.username}}</h6></a>
                   {{#if rating}}
                      <p class="text-muted small mb-0"> {{rating}}/5
                    {{else}}
                      <p class="text-muted small mb-0"> 0/5</p>
                    {{/if}}
                   
                   {{#each star1}}
                      <span class="fa fa-star" style = "color: orange;"></span>
                   {{/each}}
                   {{#each emptyStar1}}
                      <span class="fa fa-star-o" style = "color: orange;"></span>
                   {{/each}}
                            

                
            <h4 style = "margin-top:10px">{{title}}</h4>
            <p class="mt-3 mb-4 pb-2">
              {{content}}
            </p>

             <div class="small d-flex justify-content-start">
                <form action="/User/like/{{id}}" method="post">
                    <button type="submit" class = "btn" ><i class="fa fa-thumbs-up"></i> {{likes.length}} </button>
                </form>
                <form action="/User/dislikes/{{id}}" method="post">
                   <button type="submit" class = "btn" ><i class="fa fa-thumbs-up fa-rotate-180"></i> {{dislikes.length}} </button>
                                
                </form>
              </div>
          </div>
        </div><br><hr>

        {{/each}}
          <br>
        </span>
        <!-- --------------------------------------------------------------------------- -->

         

            </div>
<!-- -------------------------------------------------------------------------------------------- -->
    <div class="card-body tabcontent" id = "showcomment">
        
        <div class = "thread">
        {{#each chicken}}

          <div class = "header_post" style ="display:flex; flex-direction:row">
            <img class="rounded-circle shadow-1-strong me-3" src="/{{image}}" width = 50 height = 50>
            <div style = "margin-left: 10px ;">
              <a href = "jake.html"><h6 style = "color: seagreen; font-size:16px;">{{username}}</h6></a>
                 
                 {{#each star1}}
                    <span class="fa fa-star" style = "color: orange;"></span>
                 {{/each}}
                 {{#each emptyStar1}}
                    <span class="fa fa-star-o" style = "color: orange;"></span>
                 {{/each}}
                  
                  {{#if rating}}
                    <p class="text-muted small mb-0"> {{rating}}/5
                  {{else}}
                    <p class="text-muted small mb-0"> 0/5</p>
                  {{/if}}
                
          <button type="button" class="btn edit" style = " white-space:nowrap; float: right;" data-toggle="modal" data-target="#item-{{id}}">
            <i class="fa fa-edit"></i>
           </button>
      
              <h4 style = "margin-top:10px">{{title}}</h4>
              <p class="mt-3 mb-4 pb-2">
                {{content}}
              </p>

              <div class="small d-flex justify-content-start">
                <form action="/User/like/{{id}}" method="post">
                    <button type="submit" class = "btn" ><i class="fa fa-thumbs-up"></i> {{likes.length}} </button>
                </form>
                <form action="/User/dislikes/{{id}}" method="post">
                   <button type="submit" class = "btn" ><i class="fa fa-thumbs-up fa-rotate-180"></i> {{dislikes.length}} </button>
                                
                </form>
              </div>
            </div>
          </div>
          <br>
          
        {{#each reviewss}}

          <div class = "reply" style ="margin-left:60px; display:flex; flex-direction:row">
            <img class="rounded-circle shadow-1-strong me-3" src="/{{image}}" width = 50 height = 50>
            <div style = "margin-left: 10px ;">
              <a href = "/User"><h6 style = "color: seagreen; font-size:16px; display:flex; margin-top:10px;">{{username}}</h6></a>
            
              <p class="mt-3 mb-4 pb-2">
                {{review}}               
              </p>

            </div>
          </div>
        {{/each}}
      

           <!-- Modal -->
      <div class="modal fade" id="item-{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/User/edit/user-review" style="margin-top: -32px" method="post" enctype="multipart/form-data">
            <div class="modal-body">
               
            <input type="hidden" class="form-control" value="{{id}}"  name="commentId" style="background: #fff;"><br>
            <textarea type="text" rows="5" class="form-control"  name="replay" style="background: #fff;" placeholder="Reply here..."></textarea>
            <br>
            <input type="file" class="form-control"  name="image" style="background: #fff;">

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
          </div>
        </div>
      </div>

        {{/each}}

          
        </div>
        
        <br>
        
       
      </div>
			
			
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer class="footer">
  </footer>


  <style>


/*  FOR NAV */
a:link {
    
    background-color: transparent;
    text-decoration: underline;

}
.link:hover{
    background-color: #7bc438;
}
.sideNav{
    
    z-index: -1;
    transition: 0.4s;
    top: 0;
    width: 0;
    height: 100%;
    padding: 20px;
    position: fixed;
    align-items: center;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(50px);
    border: #487748 solid 5px;;
    font-weight: lighter;
    overflow-x: hidden;
    box-shadow: 0 0 30px rgba(0,0,0,.5);
}			
#loginHeader{
    width: 330px;
    height: 150px;
    padding: 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

}
#nav_Exit{
    padding: 30px;
    display: flex;
    flex-direction: column;
    width:25px;
    align-items: center;
    
}
#nav_Title{
    padding:10px;
    display: flex;
    width:150px;
    flex-direction: column;
}
.wrapper, .wrapper_reg{
    top: 60%;
    transform:translate(-50%, -50%);
    width: 300px;
    height: 580px;
    position: fixed;
    font-weight: lighter;

    
}
input[type = "text"], input[name = "password"]{
    background: #eee;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    position: relative;
}
input[type = "text"], input[name = "re_password"]{
    background: #eee;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    position: relative;
}
input[type = "submit"]{
    padding:10px; 
    width: 244px;
    background-color: #466D1D;
    color: #fff;
    border: none;
    border-radius: 3px;
}
input[type = "submit"]:hover{
    background-color: #354A21;
}
label{
    float: left;
    margin-left: 55px;
}
.facebook_btn, .google_btn{
    background: none;
    border: 0;
}
.line{
    height: 1px;
    width: 100%;
    position: relative;
    background-color: black;
}
.wrapper_reg{
    opacity: 0;
    pointer-events: none;
}
.sideNav.show_wrapper_reg .wrapper_reg{
    opacity: 1;
    pointer-events: auto;
}

.sideNav.show_wrapper_reg .wrapper{
    opacity: 0;
    pointer-events: none;
}
.sideNav{
    transition: .4s;
}
.sideNavactive{
    left:0;
}

/*search bar*/

.icon {
            width: 32px;
            height: 32px;
            border: 1px solid #2F3B1C;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            margin-left: 10px;
        }

        .loginregister {
            color: #444444;
            font-weight: bold;
        }

        a:link, a:visited {
            color: #444444;
            text-decoration: none;
        }

        a:hover {
            color: #526534;
            text-decoration: none;
        }

        .loginregister:hover {
            color: #526534;
        }

        .navlinks {
            word-spacing: 10px;
            margin-right: 20px;
            font-size:larger;
            text-underline-offset: auto;
        }

        .button {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        /* searchbar */

        #searchbar {
            margin-left: 25px;
            width: 100%;
            max-width: 300px;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 60px;
            padding: 10px 20px;
            backdrop-filter: blur(4px) saturate(180%);
        }

        #searchbar input {
            background: transparent;
            flex: 1;
            border: 0;
            outline: none;
            font-size: 20px;
            color: #444444;
        }

        #searchbar button img{
            width: 30px;
            height: 30px;
        }

        #searchbar button {
            border: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0);
            cursor: pointer;
            width: 50px;
            height: 50px;
            backdrop-filter: blur(4px) saturate(180%);
        }

        ::placeholder {
            color: #444444;
        }
  </style>
</head>

<body>

   <!--    FOR SIDE NAV    -->
<div class = "sideNav"id = "sideNav">
    <div id = "loginHeader">
        
        <div id = "nav_Exit" onclick="closeNav()" style="font-weight: bold;" class = "fa fa-close">
        </div>
    </div><br>

        <center>
    <div class="wrapper">
        <div class = "form_box_login">
            <form action ="/restologin" method="post">
                <div>
                    <h2 style="font-size: 1.5em;"><br>Login</h2>
                </div>
                <div class = "exit"><box-icon type='solid' name='x-circle'></box-icon>
                <!-- FOR USERNAME -->
                <div class = "input_box">
                    <label>Username</label><br>
                    <input type = "text" name = "username" placeholder="Username">
                </div><br>

                <!-- FOR PASSWORD -->
                <div class = "input_box">
                    <label>Password </label><br>
                    <input type = "password" name = "password" placeholder="Password">
                    
                </div><br>
                 <input type="checkbox" name="rememberMe">Remember Me
                        <br><br>
                
                <!-- Log In Button-->
                <div>
                    <input type ="submit" value = "Log in">
                </div><br>
                
                <!-- FORGOT PASSWORD-->
                <div class = "form-link">
                    <a href = "#" class = "link" id = "forgot_pass" style="color: black;">Forgot password</a>
                </div><br>
                

                <!-- Register an Account -->
                <span>
                    Don't have an account? <a href = "#" class = "link" id = "register_link" style="color: black;">Sign up now </a>
                </span>
            </form>
        </div><br>
        <div class="line"></div>
    </div>

</center>



<center>
    <div class="wrapper_reg">
        <div class = "form_box_signup">
            <form action ="/restosignup" method="post">
                <div>
                    <h2 style="font-family: 'Lora', serif; font-size: 1.5em;"><br>Register</h2>
                </div>
                <!-- FOR USERNAME -->
                <div class = "input_box">
                    <label>Username</label><br>
                    <input type = "text" name = "username" placeholder="Username">
                </div><br>

                <!-- FOR PASSWORD -->
                <div class = "input_box">
                    <label>Password </label><br>
                    <input type = "password" name = "password" placeholder="Password">
                    
                </div><br>
                <div class = "input_box">
                    <label>Re-enter Password </label><br>
                    <input type = "password" name = "re_password" placeholder="Re-enter Password">
                    
                </div><br>
                
                <!-- Sign Up Button-->
                <div>
                    <input type ="submit" value = "Sign up"><br>
                </div><br>
                

                <!-- Already Have an Account -->
                <span>
                    Already have an account? <a href = "#" class = "link" id = "register_link" style="color: black;">Login</a>
                </span>
            </form>
        </div><br>
        <div class="line"></div>
    </div>
    

</center>

</div>

  <header class="header fixed-top" style="z-index: 1;">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">
            <a href="Homepage">
